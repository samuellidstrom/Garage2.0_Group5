@model Garage2._0_Group5.Models.Entities.ParkedVehicle

@{
    ViewData["Title"] = "Check Out Vehicle";
}

<h1>Check Out Vehicle</h1>

<h3>Are you sure you want to check out?</h3>
<div>
    <h4>Parked Vehicles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleBrand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleBrand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleModel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfWheels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWheels)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeAtCheckOut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeAtCheckOut)
        </dd>
    </dl>
    
    <form asp-action="Check Out">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Check Out" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Parked Vehicles</a>
    </form>
</div>
