@model VehicleCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Park new Vehicle</h1>

<a asp-action="Index" class="btn btn-outline-info mx-3">Back to List</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member" class="control-label"></label>
                <partial name="_MemberInput" for="Member" />
                @*<input id="memberAutocompelete" type="text" class="form-control" />
                <input asp- asp-for="MemberId" type="hidden" />*@
                <span asp-validation-for="Member.Id" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="TypeOfVehicle" class="control-label"></label>
             @*    <select class="form-control" name="type" asp-items="@Html.GetEnumSelectList<TypeOfVehicle>()"> 
                    <option selected="selected" value=""> - Please Select Type - </option>
                </select> *@
                <input asp-for="TypeOfVehicle" class="form-control" />
            <span asp-validation-for="TypeOfVehicle" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
               <label asp-for="Color" class="control-label"></label>               
                <select class="form-control" name="color" asp-items="@Html.GetEnumSelectList<Color>()">
                    <option selected="selected" value=""> - Please Select Color - </option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wheels" class="control-label"></label>
                <input asp-for="Wheels" class="form-control" />
                <span asp-validation-for="Wheels" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Park Vehicle" class="btn btn-primary" />              
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
