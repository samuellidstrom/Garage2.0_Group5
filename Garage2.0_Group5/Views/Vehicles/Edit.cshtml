@model Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Vehicle</h1>

<a asp-action="Index" class="btn btn-outline-info">Back to List</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @* <input asp-for="Type" class="form-control" /> *@
                <select class="form-control" name="type" asp-items="@Html.GetEnumSelectList<TypeOfVehicle>()">
                    <option selected="selected">@Model.Type</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                @* <input asp-for="Color" class="form-control" /> *@
                <select class="form-control" name="color" asp-items="@Html.GetEnumSelectList<Color>()">
                    <option selected="selected">@Model.Color</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfWheels" class="control-label"></label>
                <input asp-for="NoOfWheels" class="form-control" />
                <span asp-validation-for="NoOfWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
@*                 <label asp-for="TimeOfRegistration" class="control-label"></label>
                <input asp-for="TimeOfRegistration" class="form-control" />
                <span asp-validation-for="TimeOfRegistration" class="text-danger"></span> *@
                @Html.DisplayNameFor(model => model.TimeOfRegistration)
                <div row class="unEditable">

                    @Html.DisplayFor(model => model.TimeOfRegistration)
                </div>
                

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    @* <a asp-action="Index">Back to List</a> *@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
